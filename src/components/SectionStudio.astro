---
import { Image } from "astro:assets";
interface Props {
	id: string;
	header: string;
	text: string;
	image1: Object;
	image2: Object;
	image3: Object;
	image4: Object;
	image5: Object;
	image6: Object;
}

const {
	id,
	header,
	text,
	image1,
	image2,
	image3,
	image4,
	image5,
	image6
} = Astro.props as Props;
---

<section id={id} class="">
	<h4 class="font-serif text-2xl mb-2">
		{header}
	</h4>
	<p>{text}</p>
	<div class="grid grid-cols-2 md:grid-cols-5 grid-rows-2 gap-3 mt-5">
		<div class="col-span-2 overflow-hidden">
			<Image src={image1} alt=`studio {$name} picture` format="avif" class="object-cover w-full h-full" />
		</div>
		<div class="overflow-hidden">
			<Image src={image2} alt=`studio {$name} picture` format="avif" class="object-cover w-full h-full" />
		</div>
		<div class="hidden md:block col-span-2 overflow-hidden">
			<Image src={image3} alt=`studio {$name} picture` format="avif" class="object-cover w-full h-full" />
		</div>
		<div class="overflow-hidden">
			<Image src={image4} alt=`studio {$name} picture` format="avif" class="object-cover w-full h-full" />
		</div>
		<div class="col-span-2 overflow-hidden">
			<Image src={image5} alt=`studio {$name} picture` format="avif" class="object-cover w-full h-full" />
		</div>
		<div class="col-span-2 overflow-hidden">
			<Image src={image6} alt=`studio {$name} picture` format="avif" class="object-cover w-full h-full" />
		</div>
	</div>
</section>
