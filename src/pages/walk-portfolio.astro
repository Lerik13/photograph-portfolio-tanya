---
import { Image } from "astro:assets";
import MainLayout from "../layouts/MainLayout.astro";
import Portfolio from '../components/Portfolio.astro';
import PriceListStudio from '../components/PriceListStudio.astro';

import aboutImage from "../assets/portfolio/walk/about.jpg";
import image1 from "../assets/portfolio/walk/1.jpg";
import image2 from "../assets/portfolio/walk/2.jpg";
import image3 from "../assets/portfolio/walk/3.jpg";
import image4 from "../assets/portfolio/walk/4.jpg";
import image5 from "../assets/portfolio/walk/5.jpg";
import image6 from "../assets/portfolio/walk/6.jpg";
import image7 from "../assets/portfolio/walk/7.jpg";
import image8 from "../assets/portfolio/walk/8.jpg";
import image9 from "../assets/portfolio/walk/9.jpg";
import image10 from "../assets/portfolio/walk/10.jpg";
import image11 from "../assets/portfolio/walk/11.jpg";
---

<MainLayout title="Фотопрогулка" description="Tatiana Alita - Фотопрогулка">

	<div class="container flex space-x-2 mx-auto px-6 mt-20">
		<a href="/#formats-photoshoots">Главная</a>
		<span>/</span>
		<a href="#" class="text-brightRed">Фотопрогулка</a>
	</div>

	<!-- About Section -->
	<section id="about" data-anchor="about">
		<div class="container flex flex-col space-y-12 md:space-y-0 md:flex-row items-start md:items-center px-6 mx-auto mt-10">
			<!-- Left item -->
			<div class="flex flex-col space-y-6 md:space-y-12 md:w-2/3 pr-2">
				<h2 class="animate-hide font-serif text-brightRed text-4xl md:text-5xl lg:text-6xl whitespace-nowrap md:pr-2">
					Фотопрогулка
				</h2>
				<div class="flex flex-col space-y-6">
					<p>
						Мы не в душной студии со старыми диванами.<br>
						Мы в парке на свежем воздухе, в центре города, в кафешке, в лесу… где угодно! Мы ограничены только нашей фантазией!
					</p>
				</div>
			</div>
			<!-- Image -->
			<div class="md:w-1/3 overflow-hidden md:h-[20rem] xl:h-[24rem]">
				<Image src={aboutImage} alt="Walk picture" format="avif" class="object-cover w-full h-full" />
			</div>
		</div>
	</section>

	<section id="portfolio" data-anchor="portfolio">
		<div class="container flex flex-col space-y-6 md:space-y-12 px-6 mx-auto mt-20">
			<h2 class="animate-hide font-serif text-brightRed text-4xl md:text-5xl lg:text-6xl whitespace-nowrap pr-2 flex flex-col">
				Портфолио
			</h2>
			<div class="mt-6">
				<Portfolio
					image1={image1}
					image2={image2}
					image3={image3}
					image4={image4}
					image5={image5}
					image6={image6}
					image7={image7}
					image8={image8}
					image9={image9}
					image10={image10}
					image11={image11}
				/>
			</div>
		</div>
	</section>

	<PriceListStudio />
</MainLayout>

<script>
	import "../js/animation.js";
</script>